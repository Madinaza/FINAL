@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Title)</h4>
                        <p>
                            @Model.Author /  @Model.Date.Date.ToString("MMMM dd,yyyy")
                        </p>
                        <img style="width:500px ;margin-top:40px" src="~/assets/images/@Model.DetailImage" />
                        <p style="margin-top: 25px ">
                            @Html.Raw(Model.Description)
                        </p>
                        <p style="color:red">
                            Are you sure to delete?
                        </p>
                    </div>
                    <a style="width:300px ;text-decoration:none" asp-action="Index" asp-controller="Blog" class="btn btn btn-outline-dark " type="button"> Cancel</a>
                    <form method="post" asp-action="Delete" asp-controller="Blog" asp-route-id="@Model.Id">
                        <button style="width:300px" type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

