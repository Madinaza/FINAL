@model List<ProductCategory>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            id
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @category.Id
                                            </td>
                                            <td>
                                                @category.CategoryName
                                            </td>
                                            <td>
                                               
                                                <a class="btn btn-warning" asp-controller="ProductCategory" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                                <button class="btn btn-danger" asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@category.Id" >Delete</button>

                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
