@model List<Slider>
@{
    ViewData["Title"] = "Index";
}



<div class="main-panel">
    <div class="content-wrapper">


        <section class="section">
            <div class="row" id="table-bordered">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Sliders</h4>
                        </div>
                        <div class="card-content">
                         
                            <!-- table bordered -->
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>TITLE</th>
                    
                                            <th>IMAGE</th>
                                            <th>ACTION</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var Slider in Model)
                                        {
                                            <tr>
                                                <td>@Slider.Id</td>
                                                <td>@Slider.Title</td>
                                              
                                                <td class="text-bold-500" style="width:300px">
                                                    <img style="width: 250px; height: 200px; " src="~/assets/images/@Slider.Image" />
                                                </td>
                                                <td style="margin-left:70px">
                                                    <a asp-action="Detail" asp-controller="Slider"  asp-route-id="@Slider.Id" class="btn btn-inverse-primary btn-fw d-block my-2"> Detail</a>
                                                    <a asp-action="Update" asp-controller="Slider"  asp-route-id="@Slider.Id" class="btn btn-inverse-success btn-fw d-block my-2"> Update</a>
                                                    <a asp-action="Delete" asp-controller="Slider"  asp-route-id="@Slider.Id" class="btn btn-inverse-danger btn-fw d-block my-2"> Delete</a>


                                                </td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>