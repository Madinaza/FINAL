@model RegisterVM
@{
    ViewData["Title"] = "Register";
}



<section class="py-2 bg-gray-2" data-animated-id="1">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-site py-0 d-flex justify-content-center">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-body" href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item active pl-0 d-flex align-items-center" aria-current="page">
                    Register
                </li>
            </ol>
        </nav>
    </div>
</section>


<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                        <h4>New here?</h4>
                        <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <form class="pt-3" asp-action="Register" method="post">
                            <div class="form-group">
                                <input asp-for="Fullname" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="FullName">
                                <span class="text-danger" asp-validation-for="Fullname"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Username" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="ConfirmPassword">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="mb-4">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        I agree to all Terms & Conditions
                                    </label>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                    SIGN UP
                                </button>
                               
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="Login" asp-controller="Account" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
