@model Product
@{
    ViewData["Title"] = "Detail";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Flower List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Sku
                                        </th>
                                        <th>
                                            Categories
                                        </th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                  
                                    <tr class="table-bordered">
                                        <td>
                                            @Model.Name
                                        </td>

                                        <td>

                                            <img src="~/assets/images/@Model.MainImage" style="width: 200px; height:200px" />
                                        </td>


                                        <td>
                                            @Model.Price
                                        </td>
                                        <td>
                                            @Model.SKU
                                        </td>
                                        <td>
                                            @foreach (var item in Model.ProductCategoryToProduct)
                                            {
                                                <span>@item.ProductCategory.CategoryName</span>
                                            }

                                        </td>

                                       
                                    </tr>

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>