@model List<Subscribe>

@{
    ViewData["Title"] = "Subscribers";
}

<div class="col-lg-12 grid-margin stretch-card" style="margin-top: 80px;">
    <div class="card">
        <div class="card-body">
            <h4>Subscribers</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> Email </th>
                            <th> Date </th>

                            <th> Actions </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.CreatedDate.ToString("dd MMMM yy / HH:mm")</td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-inverse-danger btn-fw">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>