@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}
<!-- Button trigger modal -->
<!-- Modal -->


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Fullname
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Roles
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr class="table-primary">
                                            <td>
                                                @user.Fullname
                                            </td>
                                            <td>
                                                @user.Username
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td>
                                                @user.Roles
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="User" asp-action="ManageRoles" asp-route-id="@user.Id">Manage Roles</a>
                                                <a class="btn btn-warning" asp-controller="User" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                                                <a class="btn btn-danger" asp-controller="User" asp-action="ToggleBlockUser" asp-route-id="@user.Id">

                                                    @if (user.IsActive)
                                                    {
                                                        <span>Block User</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Unblock User</span>
                                                    }

                                                </a>


                                            </td>


                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>