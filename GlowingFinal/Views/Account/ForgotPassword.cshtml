@model VmForgotPassword
@{
    ViewData["Title"] = "ForgotPassword";
}

<section class="py-2 bg-gray-2" data-animated-id="1">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-site py-0 d-flex justify-content-center">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-body" asp-action="Index" asp-controller="Home">Home</a>
                </li>
                <li class="breadcrumb-item active pl-0 d-flex align-items-center" aria-current="page">
                    Forgot Password
                </li>
            </ol>
        </nav>
    </div>
</section>

<section class="login">
    <div class="container">
        <div class="row login-main">
            <div class="col-md-6" style="margin-top:70px">
                <h1>Enter Email</h1>
                <form asp-controller="account" asp-action="forgotpassword" method="post">
                    <div class="row g-0 pb-1 m-0 text text-danger" asp-validation-summary="All"></div>

                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group">
                                <p class="privacy-info">If you continue, Glowing beauty will send a message to the e-mail address in your profile. Click the link in the message, and enter a new password on the page that opens.</p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-0">
                        <div class="col-12">
                            <div class="form-group pb-3">
                                <label asp-for="Email" class="" for="email">Email address&nbsp;<span class="required">*</span></label>
                                <input asp-for="Email" class="form-control" id="email" type="email" required name="email">
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-6 pb-3">
                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-outline-primary btn-lg font-weight-medium auth-form-btn">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
