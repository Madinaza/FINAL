@model List<ProductListViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    
                    <div class="card-body">

                        <h4 class="card-title ">Product List</h4>
                        <a class="btn btn badge-outline-primary" asp-controller="ProductCategory" asp-action="Index">Add Category</a>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="table-primary">
                                            <td>
                                                @item.Name
                                            </td>

                                            <td>
                                                <img src="~/assets/images/@item.MainImage" style="width: 200px; height:200px" />
                                            </td>
                                            <td>
                                                @item.Price
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                                <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

