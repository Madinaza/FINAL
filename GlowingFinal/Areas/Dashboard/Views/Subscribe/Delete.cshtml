@model Subscribe
@{
    ViewData["Title"] = "Delete";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">@Model.Email</h4>
                        <p>Subscribe date: @Model.CreatedDate.ToString("dd MMMM yy / HH:mm")</p>
                        <p>Are you sure?</p>
                        <form style="display: inline-block" method="post" asp-action="Delete"><button class="btn btn-danger" type="submit">Delete</button></form>
                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>